{
  "$schema": "https://claude.ai/schemas/claude-code-settings.json",
  "model": "opusplan",
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(npm run:*)",
      "Bash(pnpm:*)",
      "Bash(npx:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(tree:*)",
      "Bash(ls:*)",
      "Bash(wc:*)",
      "Read(**/*)",
      "Edit(qetta/**/*)",
      "Edit(src/**/*)",
      "Edit(types/**/*)",
      "Edit(.claude/**/*)",
      "Write(qetta/**/*)",
      "Write(src/**/*)",
      "Write(types/**/*)",
      "Write(.claude/**/*)",
      "mcp__github__*"
    ],
    "deny": ["Read(.env)", "Read(.env.*)", "Read(**/credentials*)", "Bash(rm -rf /)"]
  },
  "env": {},
  "cleanupPeriodDays": 14,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$CLAUDE_FILE_PATH\" 2>/dev/null || true",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "python3 .claude/scripts/code-quality-check.py",
            "timeout": 30000,
            "blocking": true
          }
        ]
      }
    ],
    "PreCommit": [
      {
        "type": "command",
        "command": "npm run typecheck 2>&1 | tail -20",
        "timeout": 60000
      },
      {
        "type": "command",
        "command": "npm run lint 2>&1 | tail -20",
        "timeout": 30000
      },
      {
        "type": "command",
        "command": "python3 .claude/scripts/security-check.py --skip-npm",
        "timeout": 30000,
        "blocking": true
      }
    ]
  },
  "autoQualityCheck": {
    "enabled": true,
    "onFileEdit": ["prettier", "code-quality-check"],
    "beforeCommit": ["typecheck", "lint", "security-check"],
    "afterBuild": ["test"]
  },
  "agents": {
    "opus-reviewer": {
      "description": "Opus 4.5 전문 코드 리뷰어 - 6가지 관점 종합 검수. /review 또는 주요 기능 완료 후 자동 호출",
      "model": "opus",
      "file": ".claude/agents/opus-reviewer.md"
    },
    "security-auditor": {
      "description": "보안 감사 전문가 (OWASP Top 10) - /security 명령으로 호출",
      "model": "sonnet",
      "file": ".claude/agents/security-auditor.md"
    },
    "data-connector": {
      "description": "V2 데이터 커넥터 전문가 - TED/SAM.gov API 연동, 공고 수집. /sync 명령으로 호출",
      "model": "sonnet",
      "file": ".claude/agents/data-connector.md"
    },
    "code-reviewer": {
      "description": "코드 리뷰 전문 에이전트 - 품질, 보안, 성능 관점 분석",
      "model": "sonnet",
      "file": ".claude/agents/code-reviewer.md"
    },
    "uxui-auditor": {
      "description": "UX/UI 전문 감사관 - 모노크롬 디자인, 반응형, 접근성 검수",
      "model": "sonnet",
      "file": ".claude/agents/uxui-auditor.md"
    },
    "bid-analyzer": {
      "description": "입찰 공고 분석 전문가 - 공고 적합성 평가, 리스크 분석",
      "model": "sonnet",
      "file": ".claude/agents/bid-analyzer.md"
    },
    "competitive-intel": {
      "description": "경쟁 정보 분석가 - 시장 동향, 경쟁사 분석, 전략 제안",
      "model": "sonnet",
      "file": ".claude/agents/competitive-intel.md"
    },
    "compliance-checker": {
      "description": "규정 준수 검토관 - 입찰 자격 요건, 법적 준수 사항 확인",
      "model": "sonnet",
      "file": ".claude/agents/compliance-checker.md"
    },
    "cost-estimator": {
      "description": "비용 추정 전문가 - 입찰가 산정, 수익성 분석",
      "model": "sonnet",
      "file": ".claude/agents/cost-estimator.md"
    },
    "design-monitor": {
      "description": "디자인 시스템 모니터 - 모노크롬 팔레트 준수 실시간 감시",
      "model": "sonnet",
      "file": ".claude/agents/design-monitor.md"
    },
    "e2e-tester": {
      "description": "E2E 테스트 전문가 - Playwright 기반 브라우저 테스트 실행",
      "model": "sonnet",
      "file": ".claude/agents/e2e-tester.md"
    },
    "error-fixer": {
      "description": "에러 수정 전문가 - TypeScript, ESLint 에러 자동 분석 및 수정",
      "model": "sonnet",
      "file": ".claude/agents/error-fixer.md"
    },
    "explore": {
      "description": "코드베이스 탐색 전문가 - 파일 구조, 의존성, 패턴 분석",
      "model": "haiku",
      "file": ".claude/agents/explore.md"
    },
    "mcp-auditor": {
      "description": "MCP 종합 검수관 - Playwright+Sequential Thinking 기반 품질 검수",
      "model": "sonnet",
      "file": ".claude/agents/mcp-auditor.md"
    },
    "security-scanner": {
      "description": "보안 스캐너 - 취약점 패턴 탐지, 시크릿 노출 검사",
      "model": "sonnet",
      "file": ".claude/agents/security-scanner.md"
    },
    "spreadsheet-agent": {
      "description": "스프레드시트 전문가 - Handsontable 기반 데이터 그리드 개발",
      "model": "sonnet",
      "file": ".claude/agents/spreadsheet-agent.md"
    },
    "test-generator": {
      "description": "테스트 코드 생성기 - 유닛/통합/E2E 테스트 자동 생성",
      "model": "sonnet",
      "file": ".claude/agents/test-generator.md"
    },
    "multi-tenant-auditor": {
      "description": "Multi-tenant 아키텍처 검증 - tenant_id 격리, JWT 전파, RLS 정책 검증",
      "model": "sonnet",
      "file": ".claude/agents/multi-tenant-auditor.md"
    },
    "org-scorer": {
      "description": "기관 점수 관리 전문가 - 175점 매칭 시스템의 기관 점수(50점) 데이터 수집 및 가중치 관리",
      "model": "sonnet",
      "file": ".claude/agents/org-scorer.md"
    },
    "ops-monitor": {
      "description": "운영 모니터링 전문가 - Sentry 에러 추적, Slack/Email 알림, 성능 메트릭 수집",
      "model": "sonnet",
      "file": ".claude/agents/ops-monitor.md"
    }
  },
  "design": {
    "system": "monochrome",
    "colors": {
      "primary": "#171717",
      "secondary": "#262626",
      "background": "#fafafa",
      "border": "#e5e5e5"
    },
    "forbidden": [
      "indigo",
      "purple",
      "blue",
      "green",
      "red",
      "yellow",
      "pink",
      "orange",
      "teal",
      "cyan",
      "emerald",
      "violet",
      "fuchsia",
      "rose",
      "amber",
      "lime",
      "sky"
    ]
  }
}
