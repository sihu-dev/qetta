{
  "name": "Qetta Development",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",

  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "prisma.prisma",
        "ms-vscode.vscode-typescript-next"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.preferences.importModuleSpecifier": "relative"
      }
    },
    "codespaces": {
      "openFiles": ["CLAUDE.md", ".claude/CLAUDE.md"]
    }
  },

  "postCreateCommand": "npm install && npm run typecheck",

  "forwardPorts": [3010],

  "portsAttributes": {
    "3010": {
      "label": "Qetta Dev Server",
      "onAutoForward": "openBrowser"
    }
  },

  "remoteEnv": {
    "NODE_ENV": "development"
  },

  "containerEnv": {
    "NEXT_PUBLIC_SUPABASE_URL": "${localEnv:NEXT_PUBLIC_SUPABASE_URL}",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY": "${localEnv:NEXT_PUBLIC_SUPABASE_ANON_KEY}"
  }
}
