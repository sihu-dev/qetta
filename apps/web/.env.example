# ============================================================================
# BIDFLOW 환경 변수
# ============================================================================

# Node 환경
NODE_ENV=development

# Supabase (필수)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Claude AI (필수)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Upstash Redis - Rate Limiting (필수)
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# CSRF 보호 (필수 - 32자 이상)
CSRF_SECRET=your-32-character-secret-key-here

# 앱 URL
NEXT_PUBLIC_APP_URL=http://localhost:3010

# ============================================================================
# 공공 데이터 API (선택)
# ============================================================================

# 나라장터 API (공공데이터포털에서 발급)
NARA_JANGTO_API_KEY=

# 한전 API
KEPCO_API_KEY=

# 수자원공사 API
KWATER_API_KEY=

# KOTRA API
KOTRA_API_KEY=

# ============================================================================
# Google Sheets API (선택)
# ============================================================================

# 서비스 계정 인증 (쓰기 가능)
# Google Cloud Console > IAM > 서비스 계정 > 키 생성
GOOGLE_SERVICE_ACCOUNT_EMAIL=bidflow@your-project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# 대상 스프레드시트 ID (URL에서 추출)
# https://docs.google.com/spreadsheets/d/{SPREADSHEET_ID}/edit
GOOGLE_SPREADSHEET_ID=

# 또는 API 키 (읽기 전용)
GOOGLE_SHEETS_API_KEY=

# ============================================================================
# 알림 (선택)
# ============================================================================

# 카카오 알림톡
KAKAO_ALIMTALK_API_KEY=

# Slack Webhook
SLACK_WEBHOOK_URL=
